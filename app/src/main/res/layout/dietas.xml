<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#A5A5E8">

    <!-- Título del entrenamiento -->
    <TextView
        android:id="@+id/tituloEntrenamiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Bienvenido al plan de dietas"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold" />

    <!-- Contenedor para el botón y nivel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/BtnVolver"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Volver"
            android:textColor="#FFFF" />


    </LinearLayout>

    <!-- Día del ejercicio -->
    <TextView
        android:id="@+id/diaDieta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Día 1"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="8dp"/>

    <!-- ListView para mostrar los ejercicios -->
    <ListView
        android:id="@+id/listViewDietas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"/>



</LinearLayout>