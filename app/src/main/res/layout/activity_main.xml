<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF">

    <ImageView
        android:id="@+id/bannerImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/loginf"
        android:scaleType="centerCrop" />


    <Button
        android:id="@+id/btnAccesoDirecto"
        android:layout_width="58dp"
        android:layout_height="46dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:background="@drawable/acceso"
        android:contentDescription="Acceso directo" />

    <TextView
        android:id="@+id/labelEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bannerImage"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Email"
        android:textColor="#000" />

    <EditText
        android:id="@+id/inputEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelEmail"
        android:layout_margin="16dp"
        android:hint="Ingrese su correo"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/btnContinuar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputEmail"
        android:layout_marginHorizontal="16dp"
        android:text="Continuar"
        android:backgroundTint="#B8D7FC"
        android:textColor="#000" />

    <Button
        android:id="@+id/btnContinuarGoogle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnContinuar"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:text="Continuar con Google"
        android:backgroundTint="#B8D7FC"
        android:textColor="#000" />

    <Button
        android:id="@+id/btnCrearCuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnContinuarGoogle"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:text="Crear una cuenta"
        android:backgroundTint="#B8D7FC"
        android:textColor="#000" />

    <TextView
        android:id="@+id/textPresentacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCrearCuenta"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Â¡Hola! Bienvenido a Calistenia Sports"
        android:textColor="#333"
        android:textSize="18sp" />
</RelativeLayout>
